{
  "name": "overture",
  "version": "0.0.1",
  "description": "Umbrella DeFi contracts",
  "main": "hardhat.config.ts",
  "directories": {
    "test": "test"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^3.3.0",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.14",
    "abi-decoder": "^2.3.0",
    "bn.js": "^5.1.3",
    "chai": "^4.2.0",
    "custom-env": "^2.0.1",
    "ethereum-waffle": "^3.2.1",
    "ethers": "^5.0.24",
    "hardhat": "^2.0.6",
    "hardhat-deploy": "^0.7.0-beta.39",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-gas-reporter": "^1.0.3",
    "husky": "^4.3.0",
    "solc": "^0.7.2",
    "solhint": "^3.2.1",
    "solidity-coverage": "^0.7.10",
    "truffle-flattener": "^1.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "web3": "^1.3.1"
  },
  "engines": {
    "node": ">=12.18.0"
  },
  "scripts": {
    "clear": "rm -rf cache artifacts deployments",
    "deploy:test-auction": "NODE_ENV=development npx hardhat run --network localhost ./scripts/deploy-auction-for-testing.ts",
    "deploy:test-auction:staging": "NODE_ENV=staging npx hardhat run --network kovan ./scripts/deploy-auction-for-testing.ts",
    "deploy": "NODE_ENV=development npx hardhat run --network localhost ./scripts/deploy-all.ts",
    "deploy:stage0": "NODE_ENV=development npx hardhat run --network localhost ./scripts/deploy-stage0-auction.ts",
    "deploy:stage0:staging": "NODE_ENV=staging npx hardhat run --network kovan ./scripts/deploy-stage0-auction.ts",
    "compile": "npx hardhat compile",
    "node": "npx hardhat node",
    "lint-sol": "solhint \"contracts/**/*.sol\"",
    "flatten": "npm run flatten:auction && npm run flatten:multi-sig && npm run flatten:umb && npm run flatten:rumb && npm run flatten:staking",
    "flatten:auction": "npx truffle-flattener ./contracts/Auction.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > flattened_Auction.sol",
    "flatten:multi-sig": "npx truffle-flattener ./contracts/UmbMultiSig.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > flattened_UmbMultiSig.sol",
    "flatten:umb": "npx truffle-flattener ./contracts/UMB.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > flattened_UMB.sol",
    "flatten:rumb": "npx truffle-flattener ./contracts/rUMB.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > flattened_rUMB.sol",
    "flatten:staking": "npx truffle-flattener ./contracts/StakingRewards.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > flattened_StakingRewards.sol"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umbrella-network/overture.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/umbrella-network/overture/issues"
  },
  "homepage": "https://github.com/umbrella-network/overture#readme"
}
