{
  "name": "overture",
  "version": "0.0.1",
  "description": "Umbrella DeFi contracts",
  "main": "hardhat.config.ts",
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-solhint": "2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^3.3.0",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "abi-decoder": "^2.4.0",
    "bn.js": "^5.1.3",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "csv-parser": "^3.0.0",
    "custom-env": "^2.0.1",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "ethereum-waffle": "^3.2.2",
    "ethers": "^5.0.26",
    "hardhat": "^2.0.8",
    "hardhat-deploy": "^0.7.0-beta.44",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "4.3.0",
    "solc": "^0.8.0",
    "solhint": "^3.3.2",
    "solidity-coverage": "^0.7.14",
    "truffle-flattener": "^1.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "web3": "^1.3.4"
  },
  "engines": {
    "node": ">=12.18.0"
  },
  "scripts": {
    "clear": "rm -rf cache artifacts deployments",
    "coveralls": "hardhat coverage && cat coverage/lcov.info | coveralls",
    "lint": "eslint . --ext .js,.jsx,.ts",
    "lint:fix": "yarn lint -- --fix",
    "deploy:contracts": "NODE_ENV=development npx hardhat run --network localhost ./scripts/001-deploy-contracts.ts",
    "deploy:contracts:force": "NODE_ENV=development FORCE=true npx hardhat run --network localhost ./scripts/001-deploy-contracts.ts",
    "deploy:contracts:dev": "NODE_ENV=development npx hardhat run --network development ./scripts/001-deploy-contracts.ts",
    "deploy:contracts:dev:force": "NODE_ENV=development FORCE=true npx hardhat run --network development ./scripts/001-deploy-contracts.ts",

    "deploy:contracts:live": "NODE_ENV=live npx hardhat run --network live ./scripts/001-deploy-contracts.ts",

    "deploy:contracts:staging": "NODE_ENV=staging npx hardhat run --network staging ./scripts/001-deploy-contracts.ts",
    "deploy:contracts:staging:force": "NODE_ENV=staging FORCE=true npx hardhat run --network staging ./scripts/001-deploy-contracts.ts",

    "setup:live": "NODE_ENV=live npx hardhat run --network live ./scripts/003-setup-farming.ts",

    "setup:farming": "NODE_ENV=development npx hardhat run --network localhost ./scripts/003-setup-farming.ts",
    "setup:farming:staging": "NODE_ENV=staging npx hardhat run --network staging ./scripts/003-setup-farming.ts",
    "setup:multisig": "NODE_ENV=development npx hardhat run --network localhost ./scripts/make-multisig-owner.ts",
    "setup:multisig:staging": "NODE_ENV=staging npx hardhat run --network staging ./scripts/make-multisig-owner.ts",

    "setup:multisig:live": "NODE_ENV=live npx hardhat run --network live ./scripts/make-multisig-owner.ts",

    "compile": "npx hardhat compile",
    "node": "npx hardhat node",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "flatten": "yarn flatten:multi-sig && yarn flatten:umb && yarn flatten:rumb1 && yarn flatten:staking",
    "flatten:multi-sig": "npx truffle-flattener ./contracts/UmbMultiSig.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > flattened_UmbMultiSig.sol",
    "flatten:umb": "npx truffle-flattener ./contracts/UMB.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > flattened_UMB.sol",
    "flatten:rumb1": "npx truffle-flattener ./contracts/rUMB1.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > flattened_rUMB1.sol",
    "flatten:staking": "npx truffle-flattener ./contracts/StakingRewards.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > flattened_StakingRewards.sol",
    "test": "npx hardhat test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umbrella-network/overture.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/umbrella-network/overture/issues"
  },
  "homepage": "https://github.com/umbrella-network/overture#readme"
}
